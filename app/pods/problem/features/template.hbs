{{#ui-layout blueprint="four-grid"}}
  {{#if (gt stage 0)}}
    {{#ui-section as |section|}}
      {{#section.h2}}
        States
      {{/section.h2}}
      {{section.divider}}
      {{#section.body}}
        Hover, Focus, Active, Loading, Disabled
      {{/section.body}}
    {{/ui-section}}
  {{/if}}

  {{#if (gt stage 1)}}
    {{#ui-section as |section|}}
      {{#section.h2}}
        ARIA
      {{/section.h2}}
      {{section.divider}}
      {{#section.body}}
        Role, aria-*, focus handling, etc.
      {{/section.body}}
    {{/ui-section}}
  {{/if}}

  {{#if (gt stage 2)}}
    {{#ui-section as |section|}}
      {{#section.h2}}
        I18N
      {{/section.h2}}
      {{section.divider}}
      {{#section.body}}
        Can't have any hardcoded text.
      {{/section.body}}
    {{/ui-section}}
  {{/if}}

  {{#if (gt stage 3)}}
    {{#ui-section as |section|}}
      {{#section.h2}}
        Interaction between components
      {{/section.h2}}
      {{section.divider}}
      {{#section.body}}
        Form component knows about inputs, etc.
      {{/section.body}}
    {{/ui-section}}
  {{/if}}
{{/ui-layout}}
